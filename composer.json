{
    "name": "socialdept/color-scales",
    "description": "Generate Tailwind-compatible color palettes from any input color",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Social Dept",
            "email": "hello@socialdept.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^12.0",
        "hsluv/hsluv": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "friendsofphp/php-cs-fixer": "^3.89"
    },
    "autoload": {
        "psr-4": {
            "SocialDept\\ColorScales\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SocialDept\\ColorScales\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SocialDept\\ColorScales\\ColorScalesServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix",
        "format:check": "vendor/bin/php-cs-fixer fix --dry-run --diff"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
